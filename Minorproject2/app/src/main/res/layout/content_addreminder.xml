<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf203"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.minor.addreminder"
    tools:showIn="@layout/app_bar_addreminder">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">


  <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Location"
      android:textSize="30sp"
      android:textColor="#123"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Select Area"
        android:textColorHint="#737679"
        android:clickable="true"
        android:textSize="25sp"
        android:id="@+id/selectarea"
        android:textColor="#123"
        android:onClick="searchloc"
        />

        <TextView
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:textColor="#123"
            android:layout_height="wrap_content"
            android:text="Enter Message"
            android:textStyle="bold"/>
        <EditText
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:textColor="#123"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:textColor="#123"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:id="@+id/selectdate"
            android:textSize="25sp"
           />
        <TextView
            android:clickable="true"
            android:onClick="selectdate"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="#123"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Task"
            android:textColor="#123"
            android:textSize="25sp"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"


         />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Radius"
            android:textColor="#123"
            android:textSize="25sp"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"


            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="25sp"
            android:id="@+id/save"
            android:layout_gravity="center_horizontal"

            android:clickable="true"
            android:onClick="save"
            android:textColor="#123"
            android:background="#ff7400"/>

    </LinearLayout>


</RelativeLayout>
