<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.minor.homescreen"
    tools:showIn="@layout/app_bar_homescreen"
    android:background="#faf203">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BeepMe is waiting for tasks"
        android:layout_centerInParent="true"
        android:id="@+id/waiting"
        android:textSize="25sp"
        android:textColor="#737679"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="Create one now"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waiting"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="#737679"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/floating"

        android:background="#ff7400"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="280dp"

        />
</RelativeLayout>
